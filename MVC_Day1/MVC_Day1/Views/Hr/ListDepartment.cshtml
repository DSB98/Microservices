@model IEnumerable<MVC_Day1.Models.Department>
@{
    ViewBag.Title = "Department List";
}

<h1 style="color:navy;">Department List</h1>
<table class="table-hover" style="padding:10px">
    <thead>
        <tr style="padding:10px">
            <th>Dept. ID</th>
            <th>Dept. Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
                <tr style="padding:10px">
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                </tr>
            }
    </tbody>


</table>